{% extends 'base.html.twig' %}

{% block title %}Modifier l'annonce - {{ annonce.titre }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card fade-in">
                <div class="card-header">
                    <h2 class="h4 mb-0">
                        <i class="fas fa-edit me-2"></i>Modifier l'annonce
                    </h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label for="titre" class="form-label">Titre de l'annonce *</label>
                                <input type="text" class="form-control" id="titre" name="titre" 
                                       value="{{ annonce.titre }}" required maxlength="100">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="type" class="form-label">Type *</label>
                                <select class="form-select" id="type" name="type" required>
                                    <option value="vente" {{ annonce.type == 'vente' ? 'selected' : '' }}>Vente</option>
                                    <option value="achat" {{ annonce.type == 'achat' ? 'selected' : '' }}>Recherche</option>
                                    <option value="don" {{ annonce.type == 'don' ? 'selected' : '' }}>Don</option>
                                    <option value="echange" {{ annonce.type == 'echange' ? 'selected' : '' }}>Échange</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="categorie_id" class="form-label">Catégorie *</label>
                                <select class="form-select" id="categorie_id" name="categorie_id" required>
                                    <option value="">Sélectionner une catégorie</option>
                                    {% for categorie in categories %}
                                        <option value="{{ categorie.id }}" 
                                                {{ annonce.categorie.id == categorie.id ? 'selected' : '' }}>
                                            {{ categorie.nom }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="prix" class="form-label">Prix (€)</label>
                                <input type="number" class="form-control" id="prix" name="prix" 
                                       value="{{ annonce.prix }}" min="0" step="0.01">
                                <div class="form-text">Laisser vide si non applicable</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description *</label>
                            <textarea class="form-control" id="description" name="description" 
                                      rows="6" required maxlength="2000">{{ annonce.description }}</textarea>
                            <div class="form-text">Maximum 2000 caractères</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="localisation" class="form-label">Localisation *</label>
                                <input type="text" class="form-control" id="localisation" name="localisation" 
                                       value="{{ annonce.localisation }}" required maxlength="100">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="code_postal" class="form-label">Code postal *</label>
                                <input type="text" class="form-control" id="code_postal" name="code_postal" 
                                       value="{{ annonce.codePostal }}" required pattern="[0-9]{5}" maxlength="5">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="ville" class="form-label">Ville *</label>
                                <input type="text" class="form-control" id="ville" name="ville" 
                                       value="{{ annonce.ville }}" required maxlength="50">
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="is_urgent" name="is_urgent" 
                                       {{ annonce.isUrgent ? 'checked' : '' }}>
                                <label class="form-check-label" for="is_urgent">
                                    <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                                    Annonce urgente
                                </label>
                            </div>
                        </div>

                        {% if annonce.images is not empty %}
                            <div class="mb-4">
                                <h6>Images actuelles :</h6>
                                <div class="row">
                                    {% for image in annonce.images %}
                                        <div class="col-md-3 mb-2">
                                            <img src="{{ asset('uploads/annonces/' ~ image) }}" 
                                                 class="img-fluid rounded" alt="Image de l'annonce">
                                        </div>
                                    {% endfor %}
                                </div>
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Pour modifier les images, vous devrez recréer l'annonce via le formulaire de création.
                                </small>
                            </div>
                        {% endif %}

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_annonce_show', {id: annonce.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Sauvegarder les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}