{% extends 'base.html.twig' %}

{% block title %}Mon profil - VideTonGrenier{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">üë§ Mon profil</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" 
                                 style="width: 100px; height: 100px; font-size: 2.5rem;">
                                {{ user.fullName|first|upper }}
                            </div>
                            <h4>{{ user.fullName }}</h4>
                            <p class="text-muted">{{ user.email }}</p>
                            
                            <a href="{{ path('app_profile_edit') }}" class="btn btn-outline-primary">
                                <i class="fas fa-edit"></i> Modifier mon profil
                            </a>
                        </div>
                        
                        <div class="col-md-8">
                            <h5 class="mb-3">üìä Mes statistiques</h5>
                            
                            <div class="row g-3 mb-4">
                                <div class="col-6">
                                    <div class="card bg-success text-white h-100">
                                        <div class="card-body text-center">
                                            <h3 class="mb-0">{{ stats.annoncesPubliees }}</h3>
                                            <small>Annonces publi√©es</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="card bg-warning text-white h-100">
                                        <div class="card-body text-center">
                                            <h3 class="mb-0">{{ stats.annoncesPendantes }}</h3>
                                            <small>En attente</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <h5 class="mb-3">‚ÑπÔ∏è Informations personnelles</h5>
                            
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><strong>Nom complet :</strong></td>
                                        <td>{{ user.fullName }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email :</strong></td>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    {% if user.phone %}
                                    <tr>
                                        <td><strong>T√©l√©phone :</strong></td>
                                        <td>{{ user.phone }}</td>
                                    </tr>
                                    {% endif %}
                                    {% if user.address %}
                                    <tr>
                                        <td><strong>Adresse :</strong></td>
                                        <td>{{ user.address|nl2br }}</td>
                                    </tr>
                                    {% endif %}
                                    <tr>
                                        <td><strong>Membre depuis :</strong></td>
                                        <td>{{ stats.membresDepuis|date('d/m/Y') }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_user_annonces') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-list"></i> Voir mes annonces
                        </a>
                        <a href="{{ path('annonce_wizard_start') }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> D√©poser une annonce
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}