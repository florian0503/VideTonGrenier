<!-- Barre de recherche avancée style Le Bon Coin -->
<div class="search-bar-container">
    <form action="{{ path('app_annonce_index') }}" method="GET" class="search-form">
        <div class="search-wrapper">
            <!-- Recherche par mot-clé -->
            <div class="search-field search-keyword">
                <i class="fas fa-search search-icon"></i>
                <input
                    type="text"
                    name="q"
                    class="form-control search-input"
                    placeholder="Que recherchez-vous ?"
                    value="{{ app.request.query.get('q') }}"
                >
            </div>

            <!-- Séparateur -->
            <div class="search-separator"></div>

            <!-- Catégorie -->
            <div class="search-field search-category">
                <i class="fas fa-tag search-icon"></i>
                <select name="categorie" class="form-select search-select">
                    <option value="">Toutes catégories</option>
                    {% for categorie in categories %}
                        <option value="{{ categorie.id }}"
                                {% if app.request.query.get('categorie') == categorie.id ~ '' %}selected{% endif %}>
                            {{ categorie.nom }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <!-- Séparateur -->
            <div class="search-separator"></div>

            <!-- Prix -->
            <div class="search-field search-price">
                <i class="fas fa-euro-sign search-icon"></i>
                <div class="price-inputs">
                    <input
                        type="number"
                        name="prix_min"
                        class="form-control price-input"
                        placeholder="Prix min"
                        value="{{ app.request.query.get('prix_min') }}"
                        min="0"
                    >
                    <span class="price-separator">-</span>
                    <input
                        type="number"
                        name="prix_max"
                        class="form-control price-input"
                        placeholder="Prix max"
                        value="{{ app.request.query.get('prix_max') }}"
                        min="0"
                    >
                </div>
            </div>

            <!-- Séparateur -->
            <div class="search-separator"></div>

            <!-- Localisation -->
            <div class="search-field search-location">
                <i class="fas fa-map-marker-alt search-icon"></i>
                <input
                    type="text"
                    name="localisation"
                    class="form-control search-input"
                    placeholder="Où ?"
                    value="{{ app.request.query.get('localisation') }}"
                >
            </div>

            <!-- Bouton de recherche -->
            <button type="submit" class="btn btn-search">
                <i class="fas fa-search me-2"></i>
                Rechercher
            </button>

            <!-- Bouton filtres avancés (mobile) -->
            <button type="button" class="btn btn-filters d-lg-none" data-bs-toggle="collapse" data-bs-target="#advancedFilters">
                <i class="fas fa-filter"></i>
            </button>
        </div>

        <!-- Filtres avancés collapsibles (mobile) -->
        <div class="collapse d-lg-none" id="advancedFilters">
            <div class="advanced-filters">
                <div class="row g-2">
                    <div class="col-6">
                        <select name="type" class="form-select">
                            <option value="">Tous types</option>
                            <option value="vente" {% if app.request.query.get('type') == 'vente' %}selected{% endif %}>Vente</option>
                            <option value="achat" {% if app.request.query.get('type') == 'achat' %}selected{% endif %}>Recherche</option>
                            <option value="service" {% if app.request.query.get('type') == 'service' %}selected{% endif %}>Service</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <select name="sort" class="form-select">
                            <option value="">Trier par</option>
                            <option value="date_desc" {% if app.request.query.get('sort') == 'date_desc' %}selected{% endif %}>Plus récentes</option>
                            <option value="date_asc" {% if app.request.query.get('sort') == 'date_asc' %}selected{% endif %}>Plus anciennes</option>
                            <option value="prix_asc" {% if app.request.query.get('sort') == 'prix_asc' %}selected{% endif %}>Prix croissant</option>
                            <option value="prix_desc" {% if app.request.query.get('sort') == 'prix_desc' %}selected{% endif %}>Prix décroissant</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

