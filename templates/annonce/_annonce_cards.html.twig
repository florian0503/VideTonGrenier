{% for annonce in annonces %}
    <div class="col-md-6 col-xl-4 mb-4">
        <div class="card h-100 shadow-sm">
            {% if annonce.firstImage %}
                <img src="{{ annonce.firstImage }}" class="card-img-top" alt="{{ annonce.titre }}" style="height: 200px; object-fit: cover;">
            {% else %}
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fas fa-image fa-3x text-muted"></i>
                </div>
            {% endif %}

            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <h5 class="card-title mb-0">{{ annonce.titre|length > 50 ? annonce.titre[:50] ~ '...' : annonce.titre }}</h5>
                    {% if annonce.isUrgent %}
                        <span class="badge bg-danger">Urgent</span>
                    {% endif %}
                </div>

                <p class="card-text text-muted small flex-grow-1">
                    {{ annonce.description|length > 100 ? annonce.description[:100] ~ '...' : annonce.description }}
                </p>

                <div class="mt-auto">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        {% if annonce.prix %}
                            <span class="h5 text-primary mb-0">{{ annonce.prix }}€</span>
                        {% else %}
                            <span class="text-muted">Prix à négocier</span>
                        {% endif %}
                        <small class="text-muted">
                            <i class="fas fa-eye"></i> {{ annonce.vues }}
                        </small>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <small class="text-muted">
                            <i class="fas fa-map-marker-alt"></i>
                            {{ annonce.ville }}
                        </small>
                        <small class="text-muted">
                            {{ annonce.publishedAt|date('d/m/Y') }}
                        </small>
                    </div>

                    {% if annonce.categorie %}
                        <div class="mb-2">
                            <span class="badge bg-secondary">{{ annonce.categorie.nom }}</span>
                        </div>
                    {% endif %}

                    <a href="{{ path('app_annonce_show', {id: annonce.id}) }}" class="btn btn-primary w-100">
                        Voir l'annonce
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

