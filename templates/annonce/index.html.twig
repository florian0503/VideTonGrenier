{% extends 'base.html.twig' %}

{% block title %}Toutes les annonces - VideTonGrenier{% endblock %}

{% block meta_description %}Découvrez toutes les annonces disponibles sur VideTonGrenier. Trouvez ce que vous cherchez ou vendez vos objets facilement.{% endblock %}


{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">Toutes les annonces</h1>
                    <p class="text-muted mb-0" id="annonce-count">
                        {{ annonces|length }} sur {{ total_annonces }} annonce{{ total_annonces > 1 ? 's' : '' }} affichée{{ annonces|length > 1 ? 's' : '' }}
                    </p>
                </div>
                {% if app.user %}
                    <a href="{{ path('annonce_wizard_start') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Déposer une annonce
                    </a>
                {% endif %}
            </div>

            {% if annonces is empty %}
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-search fa-3x text-muted"></i>
                    </div>
                    <h4>Aucune annonce trouvée</h4>
                    <p class="text-muted">
                        {% if filters.q or filters.categorie %}
                            Essayez de modifier vos critères de recherche.
                        {% else %}
                            Il n'y a pas encore d'annonces publiées.
                        {% endif %}
                    </p>
                    {% if app.user %}
                        <a href="{{ path('annonce_wizard_start') }}" class="btn btn-primary">
                            Déposer la première annonce
                        </a>
                    {% endif %}
                </div>
            {% else %}
                <div class="row justify-content-center" id="annonces-container">
                    {% include 'annonce/_annonce_cards.html.twig' with {'annonces': annonces} %}
                </div>

                {% if has_more %}
                    <div class="text-center mt-4">
                        <button type="button" class="btn btn-outline-primary btn-lg" id="load-more-btn" data-page="2">
                            <span class="btn-text">Voir plus d'annonces</span>
                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        </button>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const loadMoreBtn = document.getElementById('load-more-btn');
    const annoncesContainer = document.getElementById('annonces-container');
    const annonceCount = document.getElementById('annonce-count');

    if (loadMoreBtn) {
        loadMoreBtn.addEventListener('click', function() {
            const page = parseInt(this.dataset.page);
            const btnText = this.querySelector('.btn-text');
            const spinner = this.querySelector('.spinner-border');

            // Afficher le spinner et désactiver le bouton
            btnText.textContent = 'Chargement...';
            spinner.classList.remove('d-none');
            this.disabled = true;

            // Récupérer les paramètres de filtrage actuels
            const urlParams = new URLSearchParams(window.location.search);
            const loadMoreUrl = new URL('{{ path('app_annonce_load_more') }}', window.location.origin);

            // Ajouter les paramètres existants
            loadMoreUrl.searchParams.set('page', page);
            if (urlParams.get('q')) {
                loadMoreUrl.searchParams.set('q', urlParams.get('q'));
            }
            if (urlParams.get('categorie')) {
                loadMoreUrl.searchParams.set('categorie', urlParams.get('categorie'));
            }

            fetch(loadMoreUrl)
                .then(response => response.json())
                .then(data => {
                    // Ajouter les nouvelles annonces
                    annoncesContainer.insertAdjacentHTML('beforeend', data.html);

                    // Mettre à jour le compteur
                    const currentCount = annoncesContainer.children.length;
                    annonceCount.textContent = `${currentCount} sur ${data.totalAnnonces} annonce${data.totalAnnonces > 1 ? 's' : ''} affichée${currentCount > 1 ? 's' : ''}`;

                    if (data.hasMore) {
                        // Il y a encore des annonces à charger
                        this.dataset.page = page + 1;
                        btnText.textContent = 'Voir plus d\'annonces';
                        spinner.classList.add('d-none');
                        this.disabled = false;
                    } else {
                        // Plus d'annonces à charger
                        this.style.display = 'none';
                    }
                })
                .catch(error => {
                    console.error('Erreur lors du chargement:', error);
                    btnText.textContent = 'Erreur - Réessayer';
                    spinner.classList.add('d-none');
                    this.disabled = false;
                });
        });
    }

    // Réinitialiser la pagination lors de la soumission du formulaire de filtrage
    const filterForm = document.getElementById('filter-form');
    if (filterForm) {
        filterForm.addEventListener('submit', function() {
            // Le formulaire va recharger la page, donc pas besoin de logique AJAX ici
        });
    }
});
</script>
{% endblock %}
