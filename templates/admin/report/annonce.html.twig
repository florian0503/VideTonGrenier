{% extends 'base.html.twig' %}

{% block title %}Annonce signalée - Administration{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- En-tête -->
            <div class="card mb-4">
                <div class="card-header bg-warning">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Annonce Signalée
                        </h4>
                        <a href="/admin?crudAction=index&crudControllerFqcn=App%5CController%5CAdmin%5CAnnonceReportCrudController" 
                           class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Retour aux signalements
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-info-circle text-primary me-2"></i>Informations sur le signalement</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>ID :</strong></td>
                                    <td>#{{ report.id }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Type :</strong></td>
                                    <td><span class="badge bg-info">Annonce</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Motif :</strong></td>
                                    <td>
                                        <span class="badge bg-warning">{{ report.reason }}</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Signalé par :</strong></td>
                                    <td>{{ report.reporter.fullName }} ({{ report.reporter.email }})</td>
                                </tr>
                                <tr>
                                    <td><strong>Propriétaire de l'annonce :</strong></td>
                                    <td>
                                        {{ report.reportedUser.fullName }} ({{ report.reportedUser.email }})
                                        {% if report.reportedUser.isBanned %}
                                            <span class="badge bg-danger ms-2">BANNI</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Date du signalement :</strong></td>
                                    <td>{{ report.createdAt|date('d/m/Y H:i') }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-chart-line text-success me-2"></i>Statistiques de l'annonce</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Statut :</strong></td>
                                    <td>
                                        {% if annonce.isPublished %}
                                            <span class="badge bg-success">Publiée</span>
                                        {% elseif annonce.isPending %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ annonce.status }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Vues :</strong></td>
                                    <td>{{ annonce.vues }} vues</td>
                                </tr>
                                <tr>
                                    <td><strong>Publiée le :</strong></td>
                                    <td>{{ annonce.publishedAt ? annonce.publishedAt|date('d/m/Y H:i') : 'Non publiée' }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Urgent :</strong></td>
                                    <td>
                                        {% if annonce.isUrgent %}
                                            <span class="badge bg-danger">OUI</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Non</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    {% if report.description %}
                        <div class="mt-3">
                            <h6><i class="fas fa-comment text-secondary me-2"></i>Description du signalement</h6>
                            <div class="alert alert-light">
                                {{ report.description|nl2br }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Contenu de l'annonce -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-eye me-2"></i>
                                Contenu de l'annonce signalée
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Images -->
                            {% if annonce.images is not empty %}
                                <div class="mb-4">
                                    <h6>Images ({{ annonce.images|length }})</h6>
                                    <div class="row g-2">
                                        {% for image in annonce.images %}
                                            <div class="col-md-3 col-6">
                                                <img src="/uploads/annonces/{{ image }}" 
                                                     alt="Image {{ loop.index }}" 
                                                     class="img-fluid rounded border"
                                                     style="height: 150px; width: 100%; object-fit: cover;"
                                                     data-bs-toggle="modal" 
                                                     data-bs-target="#imageModal{{ loop.index }}">
                                                {% if loop.first %}
                                                    <small class="badge bg-primary position-absolute" style="top: 5px; left: 15px;">Principale</small>
                                                {% endif %}
                                            </div>

                                            <!-- Modal pour voir l'image en grand -->
                                            <div class="modal fade" id="imageModal{{ loop.index }}" tabindex="-1">
                                                <div class="modal-dialog modal-lg modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Image {{ loop.index }} de l'annonce</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body text-center">
                                                            <img src="/uploads/annonces/{{ image }}" alt="Image {{ loop.index }}" class="img-fluid">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Détails -->
                            <div class="row">
                                <div class="col-md-8">
                                    <h4 class="text-primary">{{ annonce.titre }}</h4>
                                    <p class="lead">{{ annonce.prix ? annonce.prix ~ ' €' : 'Prix non précisé' }}</p>
                                    
                                    <div class="mb-3">
                                        <h6>Description</h6>
                                        <div class="border rounded p-3 bg-light">
                                            {{ annonce.description|nl2br }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h6 class="mb-0">Détails</h6>
                                        </div>
                                        <div class="card-body">
                                            <p class="mb-2"><strong>Type :</strong> 
                                                <span class="badge bg-secondary">{{ annonce.type }}</span>
                                            </p>
                                            <p class="mb-2"><strong>Catégorie :</strong> {{ annonce.categorie.nom }}</p>
                                            <p class="mb-2"><strong>Localisation :</strong></p>
                                            <address class="small">
                                                {{ annonce.localisation }}<br>
                                                {{ annonce.codePostal }} {{ annonce.ville }}
                                            </address>
                                            <p class="mb-0"><strong>Vendeur :</strong></p>
                                            <p class="small">
                                                {{ annonce.user.fullName }}<br>
                                                <a href="mailto:{{ annonce.user.email }}">{{ annonce.user.email }}</a><br>
                                                {% if annonce.user.phone %}
                                                    <a href="tel:{{ annonce.user.phone }}">{{ annonce.user.phone }}</a>
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions administrateur -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="fas fa-gavel me-2"></i>
                                Actions administrateur
                            </h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">
                                Après avoir examiné cette annonce, vous pouvez prendre une des actions suivantes :
                            </p>
                            
                            <div class="d-grid gap-2">
                                {% if report.isPending() and not report.reportedUser.isBanned %}
                                    <a href="/admin?crudAction=banUser&crudControllerFqcn=App%5CController%5CAdmin%5CAnnonceReportCrudController&entityId={{ report.id }}" 
                                       class="btn btn-danger"
                                       onclick="return confirm('Êtes-vous sûr de vouloir bannir cet utilisateur ?')">
                                        <i class="fas fa-ban me-1"></i> Bannir l'utilisateur
                                    </a>
                                {% endif %}
                                
                                {% if report.reportedUser.isBanned %}
                                    <a href="/admin?crudAction=unbanUser&crudControllerFqcn=App%5CController%5CAdmin%5CAnnonceReportCrudController&entityId={{ report.id }}" 
                                       class="btn btn-success">
                                        <i class="fas fa-undo me-1"></i> Débannir l'utilisateur
                                    </a>
                                {% endif %}
                                
                                {% if report.isPending() %}
                                    <a href="/admin?crudAction=markReviewed&crudControllerFqcn=App%5CController%5CAdmin%5CAnnonceReportCrudController&entityId={{ report.id }}" 
                                       class="btn btn-info">
                                        <i class="fas fa-check me-1"></i> Marquer comme examiné
                                    </a>
                                    
                                    <a href="/admin?crudAction=dismiss&crudControllerFqcn=App%5CController%5CAdmin%5CAnnonceReportCrudController&entityId={{ report.id }}" 
                                       class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i> Rejeter le signalement
                                    </a>
                                {% endif %}
                                
                                <hr>
                                
                                <a href="{{ path('app_annonce_show', {id: annonce.id}) }}" 
                                   class="btn btn-outline-primary" target="_blank">
                                    <i class="fas fa-external-link-alt me-1"></i> Voir sur le site
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Historique de modération -->
                    {% if report.reviewedAt %}
                        <div class="card mt-3">
                            <div class="card-header bg-secondary text-white">
                                <h6 class="mb-0">
                                    <i class="fas fa-history me-2"></i>
                                    Historique
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="small mb-2">
                                    <strong>Examiné le :</strong> {{ report.reviewedAt|date('d/m/Y H:i') }}
                                </p>
                                {% if report.reviewedBy %}
                                    <p class="small mb-2">
                                        <strong>Par :</strong> {{ report.reviewedBy.fullName }}
                                    </p>
                                {% endif %}
                                {% if report.adminComment %}
                                    <p class="small mb-0">
                                        <strong>Commentaire :</strong><br>
                                        {{ report.adminComment|nl2br }}
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}