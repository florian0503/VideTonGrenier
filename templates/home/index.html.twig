                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ annonce.titre|length > 50 ? annonce.titre[:50] ~ '...' : annonce.titre }}</h5>
