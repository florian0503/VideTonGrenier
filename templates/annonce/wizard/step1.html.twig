{% extends 'base.html.twig' %}

{% block title %}Déposer une annonce - Étape 1/5{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Progress bar -->
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">Étape 1 sur 5</span>
                    <span class="text-muted">20%</span>
                </div>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 20%"></div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="h4 mb-4">
                        <i class="fas fa-edit text-primary me-2"></i>
                        Commençons par les informations de base
                    </h2>

                    <form method="post">
                        <div class="mb-4">
                            <label for="titre" class="form-label fw-bold">
                                Titre de votre annonce <span class="text-danger">*</span>
                            </label>
                            <input type="text"
                                   class="form-control form-control-lg"
                                   id="titre"
                                   name="titre"
                                   value="{{ data.titre ?? '' }}"
                                   placeholder="Ex: iPhone 13 Pro en excellent état"
                                   maxlength="255"
                                   required>
                            <div class="form-text">
                                Soyez précis et attractif. Ce titre apparaîtra en première ligne dans les résultats de recherche.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                Type d'annonce <span class="text-danger">*</span>
                            </label>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="card border-2 h-100 type-card" data-type="vente">
                                        <div class="card-body text-center p-3">
                                            <i class="fas fa-tag fa-2x text-success mb-2"></i>
                                            <h6 class="card-title">Je vends</h6>
                                            <p class="card-text small text-muted">Vendre un objet, meuble, etc.</p>
                                            <input type="radio" name="type" value="vente" class="d-none"
                                                   {{ (data.type ?? '') == 'vente' ? 'checked' : '' }}>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card border-2 h-100 type-card" data-type="achat">
                                        <div class="card-body text-center p-3">
                                            <i class="fas fa-search fa-2x text-info mb-2"></i>
                                            <h6 class="card-title">Je cherche</h6>
                                            <p class="card-text small text-muted">Rechercher un objet spécifique</p>
                                            <input type="radio" name="type" value="achat" class="d-none"
                                                   {{ (data.type ?? '') == 'achat' ? 'checked' : '' }}>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card border-2 h-100 type-card" data-type="service">
                                        <div class="card-body text-center p-3">
                                            <i class="fas fa-handshake fa-2x text-warning mb-2"></i>
                                            <h6 class="card-title">Service</h6>
                                            <p class="card-text small text-muted">Proposer ou demander un service</p>
                                            <input type="radio" name="type" value="service" class="d-none"
                                                   {{ (data.type ?? '') == 'service' ? 'checked' : '' }}>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_annonce_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                Continuer <i class="fas fa-arrow-right ms-1"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.type-card {
    cursor: pointer;
    transition: all 0.2s ease;
    border-color: #dee2e6 !important;
}

.type-card:hover {
    border-color: #0d6efd !important;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.type-card.selected {
    border-color: #0d6efd !important;
    background-color: rgba(13, 110, 253, 0.1);
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const typeCards = document.querySelectorAll('.type-card');

    // Marquer la carte sélectionnée au chargement
    typeCards.forEach(card => {
        const radio = card.querySelector('input[type="radio"]');
        if (radio.checked) {
            card.classList.add('selected');
        }
    });

    // Gérer la sélection
    typeCards.forEach(card => {
        card.addEventListener('click', function() {
            // Désélectionner toutes les cartes
            typeCards.forEach(c => c.classList.remove('selected'));

            // Sélectionner cette carte
            this.classList.add('selected');

            // Cocher le radio bouton
            const radio = this.querySelector('input[type="radio"]');
            radio.checked = true;
        });
    });
});
</script>
{% endblock %}
