{% extends 'base.html.twig' %}

{% block title %}Préférences des cookies - VideTonGrenier{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-cookie-bite me-2"></i>Préférences des cookies</h2>
                </div>
                <div class="card-body p-4">
                    <p class="lead mb-4">
                        Nous utilisons des cookies pour améliorer votre expérience sur notre site.
                        Vous pouvez personnaliser vos préférences ci-dessous.
                    </p>

                    <form id="cookie-preferences-form">
                        {% for category_key, category in categories %}
                            <div class="card mb-3 border">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h5 class="card-title mb-2">
                                                {{ category.name }}
                                                {% if category.required %}
                                                    <span class="badge bg-secondary ms-2">Obligatoire</span>
                                                {% endif %}
                                            </h5>
                                            <p class="card-text text-muted">{{ category.description }}</p>
                                        </div>
                                        <div class="form-check form-switch ms-3">
                                            <input
                                                class="form-check-input"
                                                type="checkbox"
                                                id="{{ category_key }}"
                                                name="{{ category_key }}"
                                                {% if category.required %}disabled checked{% endif %}
                                                {% if current_preferences[category_key] is defined and current_preferences[category_key] %}checked{% endif %}
                                            >
                                            <label class="form-check-label" for="{{ category_key }}"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                        <div class="d-flex gap-3 mt-4">
                            <button type="button" class="btn btn-success flex-fill" id="accept-all-btn">
                                <i class="fas fa-check me-2"></i>Accepter tout
                            </button>
                            <button type="button" class="btn btn-outline-secondary flex-fill" id="reject-all-btn">
                                <i class="fas fa-times me-2"></i>Refuser tout
                            </button>
                            <button type="submit" class="btn btn-primary flex-fill">
                                <i class="fas fa-save me-2"></i>Sauvegarder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('cookie-preferences-form');
    const acceptAllBtn = document.getElementById('accept-all-btn');
    const rejectAllBtn = document.getElementById('reject-all-btn');

    acceptAllBtn.addEventListener('click', function() {
        // Cocher tous les cookies optionnels
        document.querySelectorAll('input[type="checkbox"]:not([disabled])').forEach(checkbox => {
            checkbox.checked = true;
        });

        fetch('{{ path('cookie_accept_all') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        }).then(() => {
            window.location.reload();
        });
    });

    rejectAllBtn.addEventListener('click', function() {
        // Décocher tous les cookies optionnels
        document.querySelectorAll('input[type="checkbox"]:not([disabled])').forEach(checkbox => {
            checkbox.checked = false;
        });

        fetch('{{ path('cookie_reject_all') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        }).then(() => {
            window.location.reload();
        });
    });

    form.addEventListener('submit', function(e) {
        e.preventDefault();

        const formData = new FormData(form);
        const preferences = {};

        // Collecter les préférences
        ['analytics', 'marketing', 'functional'].forEach(category => {
            preferences[category] = formData.has(category);
        });

        fetch('{{ path('cookie_save_preferences') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify(preferences)
        }).then(response => response.json())
        .then(data => {
            if (data.status === 'success') {
                alert('Vos préférences ont été sauvegardées !');
                window.location.reload();
            }
        });
    });
});
</script>
{% endblock %}
