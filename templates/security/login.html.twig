{% extends 'base.html.twig' %}

{% block title %}Connexion - VideTonGrenier{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-container {
            min-height: 80vh;
            background-color: #f8f9fa;
        }
        
        .login-card {
            background: white;
            border-radius: 15px;
            border: 1px solid #e9ecef;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        
        .login-form .form-control {
            border-radius: 8px;
            border: 2px solid #e9ecef;
            padding: 12px 45px 12px 16px;
            transition: all 0.3s ease;
        }
        
        .login-form .form-control:focus {
            border-color: #6f42c1;
            box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
        }
        
        .btn-login {
            background-color: #6f42c1;
            border: none;
            border-radius: 8px;
            padding: 12px 32px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-login:hover {
            background-color: #5a2d91;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(111, 66, 193, 0.3);
        }
        
        .login-header {
            color: #2d3436;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }
        
        .login-divider {
            position: relative;
            text-align: center;
            margin: 2rem 0;
        }
        
        .login-divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: #dee2e6;
        }
        
        .login-divider span {
            background: white;
            padding: 0 1rem;
            color: #6c757d;
            font-size: 0.9rem;
        }
        
        .register-link {
            color: #6f42c1;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }
        
        .register-link:hover {
            color: #5a2d91;
        }
        
        .password-input-wrapper {
            position: relative;
        }
        
        .password-toggle {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
            z-index: 10;
        }
        
        .password-toggle:hover {
            color: #6f42c1;
        }
        
        @media (max-width: 768px) {
            .login-container {
                min-height: 100vh;
                padding: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="login-container d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-card p-4 p-md-5">
                    {% if app.user %}
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Vous êtes déjà connecté en tant que {{ app.user.userIdentifier }}
                            <br>
                            <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-primary mt-2">Se déconnecter</a>
                        </div>
                    {% else %}
                        <form method="post" class="login-form">
                            {% if error %}
                                <div class="alert alert-danger mb-4">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            <div class="text-center mb-4">
                                <h1 class="login-header">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Connexion
                                </h1>
                                <p class="text-muted">Accédez à votre compte VideTonGrenier</p>
                            </div>

                            <div class="mb-4">
                                <div class="form-floating">
                                    <input type="email" value="{{ last_username }}" name="_username" id="username" 
                                           class="form-control" placeholder="votre@email.com" autocomplete="email" required autofocus>
                                    <label for="username">
                                        <i class="fas fa-envelope me-2"></i>Adresse email
                                    </label>
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="password-input-wrapper">
                                    <div class="form-floating">
                                        <input type="password" name="_password" id="password" 
                                               class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>
                                        <label for="password">
                                            <i class="fas fa-lock me-2"></i>Mot de passe
                                        </label>
                                    </div>
                                    <button type="button" class="password-toggle" onclick="togglePassword('password')">
                                        <i class="fas fa-eye" id="password-eye"></i>
                                    </button>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                            <div class="d-grid mb-4">
                                <button class="btn btn-primary btn-login" type="submit">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Se connecter
                                </button>
                            </div>

                            <div class="login-divider">
                                <span>Pas encore inscrit ?</span>
                            </div>

                            <div class="text-center">
                                <a href="{{ path('app_register') }}" class="register-link">
                                    <i class="fas fa-user-plus me-2"></i>
                                    Créer un compte gratuitement
                                </a>
                            </div>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function togglePassword(inputId) {
    const passwordInput = document.getElementById(inputId);
    const eyeIcon = document.getElementById(inputId + '-eye');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        eyeIcon.classList.remove('fa-eye');
        eyeIcon.classList.add('fa-eye-slash');
    } else {
        passwordInput.type = 'password';
        eyeIcon.classList.remove('fa-eye-slash');
        eyeIcon.classList.add('fa-eye');
    }
}
</script>
{% endblock %}
