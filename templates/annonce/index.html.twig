{% extends 'base.html.twig' %}

{% block title %}Toutes les annonces - VideTonGrenier{% endblock %}

{% block meta_description %}D√©couvrez toutes les annonces disponibles sur VideTonGrenier. Trouvez ce que vous cherchez ou vendez vos objets facilement.{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üîç Filtres</h5>
                </div>
                <div class="card-body">
                    <form method="get" action="{{ path('app_annonce_index') }}">
                        <div class="mb-3">
                            <label for="search" class="form-label">Recherche</label>
                            <input type="text" class="form-control" id="search" name="q" value="{{ search ?? '' }}" placeholder="Mot-cl√©...">
                        </div>
                        
                        <div class="mb-3">
                            <label for="categorie" class="form-label">Cat√©gorie</label>
                            <select class="form-select" id="categorie" name="categorie">
                                <option value="">Toutes les cat√©gories</option>
                                {% for categorie in categories %}
                                    <option value="{{ categorie.id }}" {% if current_category == categorie.id %}selected{% endif %}>
                                        {{ categorie.nom }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                        {% if search or current_category %}
                            <a href="{{ path('app_annonce_index') }}" class="btn btn-outline-secondary w-100 mt-2">Effacer les filtres</a>
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">Toutes les annonces</h1>
                    <p class="text-muted mb-0">{{ annonces|length }} annonce{{ annonces|length > 1 ? 's' : '' }} trouv√©e{{ annonces|length > 1 ? 's' : '' }}</p>
                </div>
                {% if app.user %}
                    <a href="{{ path('annonce_wizard_start') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> D√©poser une annonce
                    </a>
                {% endif %}
            </div>

            {% if annonces is empty %}
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-search fa-3x text-muted"></i>
                    </div>
                    <h4>Aucune annonce trouv√©e</h4>
                    <p class="text-muted">
                        {% if search or current_category %}
                            Essayez de modifier vos crit√®res de recherche.
                        {% else %}
                            Il n'y a pas encore d'annonces publi√©es.
                        {% endif %}
                    </p>
                    {% if app.user %}
                        <a href="{{ path('annonce_wizard_start') }}" class="btn btn-primary">
                            D√©poser la premi√®re annonce
                        </a>
                    {% endif %}
                </div>
            {% else %}
                <div class="row">
                    {% for annonce in annonces %}
                        <div class="col-md-6 col-xl-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                {% if annonce.firstImage %}
                                    <img src="{{ annonce.firstImage }}" class="card-img-top" alt="{{ annonce.titre }}" style="height: 200px; object-fit: cover;">
                                {% else %}
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                {% endif %}
                                
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0">{{ annonce.titre|length > 50 ? annonce.titre[:50] ~ '...' : annonce.titre }}</h5>
                                        {% if annonce.isUrgent %}
                                            <span class="badge bg-danger">Urgent</span>
                                        {% endif %}
                                    </div>
                                    
                                    <p class="card-text text-muted small flex-grow-1">
                                        {{ annonce.description|length > 100 ? annonce.description[:100] ~ '...' : annonce.description }}
                                    </p>
                                    
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            {% if annonce.prix %}
                                                <span class="h5 text-primary mb-0">{{ annonce.prix }} ‚Ç¨</span>
                                            {% else %}
                                                <span class="text-muted">Prix √† n√©gocier</span>
                                            {% endif %}
                                            <small class="text-muted">{{ annonce.type|title }}</small>
                                        </div>
                                        
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="fas fa-map-marker-alt"></i>
                                                {{ annonce.ville ?: 'Non sp√©cifi√©e' }}
                                            </small>
                                            <small class="text-muted">
                                                <i class="fas fa-eye"></i> {{ annonce.vues }} vue{{ annonce.vues > 1 ? 's' : '' }}
                                            </small>
                                        </div>
                                        
                                        <div class="d-flex justify-content-between align-items-center mt-2">
                                            <small class="text-muted">
                                                {{ annonce.publishedAt ? annonce.publishedAt|date('d/m/Y') : 'En attente' }}
                                            </small>
                                            <a href="{{ path('app_annonce_show', {id: annonce.id}) }}" class="btn btn-sm btn-outline-primary">Voir d√©tails</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
