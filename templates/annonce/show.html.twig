{% extends 'base.html.twig' %}

{% block title %}{{ annonce.titre }} - VideTonGrenier{% endblock %}

{% block meta_description %}{{ annonce.description|slice(0, 160) }}{% endblock %}

{% block body %}
<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_annonce_index') }}">Annonces</a></li>
            {% if annonce.categorie %}
                <li class="breadcrumb-item"><a href="{{ path('app_annonce_index', {categorie: annonce.categorie.id}) }}">{{ annonce.categorie.nom }}</a></li>
            {% endif %}
            <li class="breadcrumb-item active" aria-current="page">{{ annonce.titre }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                {% if annonce.images is not empty %}
                    <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            {% for image in annonce.images %}
                                <div class="carousel-item {% if loop.first %}active{% endif %}">
                                    <img src="{{ '/uploads/annonces/' ~ image }}" class="d-block w-100" alt="{{ annonce.titre }}" style="height: 400px; object-fit: cover;">
                                </div>
                            {% endfor %}
                        </div>
                        {% if annonce.images|length > 1 %}
                            <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                        <i class="fas fa-image fa-5x text-muted"></i>
                    </div>
                {% endif %}

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="h3 mb-0">{{ annonce.titre }}</h1>
                        {% if annonce.isUrgent %}
                            <span class="badge bg-danger fs-6">üö® URGENT</span>
                        {% endif %}
                    </div>

                    {% if annonce.prix %}
                        <div class="mb-3">
                            <span class="h2 text-primary fw-bold">{{ annonce.prix }} ‚Ç¨</span>
                            <span class="text-muted ms-2">{{ annonce.type|title }}</span>
                        </div>
                    {% else %}
                        <div class="mb-3">
                            <span class="h4 text-muted">Prix √† n√©gocier</span>
                            <span class="text-muted ms-2">{{ annonce.type|title }}</span>
                        </div>
                    {% endif %}

                    <div class="mb-4">
                        <h4>Description</h4>
                        <p class="text-justify">{{ annonce.description|nl2br }}</p>
                    </div>

                    <div class="row mb-3">
                        {% if annonce.categorie %}
                            <div class="col-md-6">
                                <strong>Cat√©gorie :</strong>
                                <a href="{{ path('app_annonce_index', {categorie: annonce.categorie.id}) }}" class="text-decoration-none">
                                    {{ annonce.categorie.nom }}
                                </a>
                            </div>
                        {% endif %}
                        {% if annonce.ville or annonce.localisation %}
                            <div class="col-md-6">
                                <strong>Localisation :</strong>
                                <i class="fas fa-map-marker-alt text-muted"></i>
                                {% if annonce.ville %}{{ annonce.ville }}{% endif %}
                                {% if annonce.codePostal %} ({{ annonce.codePostal }}){% endif %}
                                {% if annonce.localisation and annonce.ville != annonce.localisation %}
                                    <br><small class="text-muted">{{ annonce.localisation }}</small>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="row text-muted small">
                        <div class="col-md-6">
                            <i class="fas fa-calendar-alt"></i>
                            Publi√© le {{ annonce.publishedAt ? annonce.publishedAt|date('d/m/Y √† H:i') : 'En attente de mod√©ration' }}
                        </div>
                        <div class="col-md-6">
                            <i class="fas fa-eye"></i>
                            {{ annonce.vues }} vue{{ annonce.vues > 1 ? 's' : '' }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">üë§ Vendeur</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            {{ annonce.user.fullName|first|upper }}
                        </div>
                        <div>
                            <h6 class="mb-0">{{ annonce.user.fullName }}</h6>
                            <small class="text-muted">Membre depuis {{ annonce.user.createdAt|date('M Y') }}</small>
                        </div>
                    </div>
                    
                    {% if app.user and app.user != annonce.user %}
                        <a href="{{ path('app_message_contact', {id: annonce.id}) }}" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-envelope"></i> Contacter le vendeur
                        </a>
                        {% if annonce.user.phone %}
                            <button class="btn btn-outline-secondary w-100" data-bs-toggle="modal" data-bs-target="#phoneModal">
                                <i class="fas fa-phone"></i> Voir le t√©l√©phone
                            </button>
                        {% endif %}
                    {% elseif app.user == annonce.user %}
                        <div class="alert alert-info small">
                            <i class="fas fa-info-circle"></i>
                            C'est votre annonce
                        </div>
                        <a href="{{ path('app_annonce_edit', {id: annonce.id}) }}" class="btn btn-outline-primary w-100 mb-2">
                            <i class="fas fa-edit"></i> Modifier l'annonce
                        </a>
                        <button class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash"></i> Supprimer l'annonce
                        </button>
                    {% else %}
                        <div class="alert alert-warning small">
                            <i class="fas fa-sign-in-alt"></i>
                            <a href="{{ path('app_login') }}" class="text-decoration-none">Connectez-vous</a> pour contacter le vendeur
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0">üõ°Ô∏è S√©curit√©</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled small mb-0">
                        <li><i class="fas fa-check text-success"></i> Annonce mod√©r√©e</li>
                        <li><i class="fas fa-check text-success"></i> Vendeur v√©rifi√©</li>
                        <li><i class="fas fa-exclamation-triangle text-warning"></i> <a href="#" class="text-decoration-none">Signaler cette annonce</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{% if app.user and app.user != annonce.user and annonce.user.phone %}
<!-- Modal pour voir le t√©l√©phone -->
<div class="modal fade" id="phoneModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Coordonn√©es de {{ annonce.user.fullName }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fas fa-phone fa-3x text-primary mb-3"></i>
                <h4>{{ annonce.user.phone }}</h4>
                <p class="text-muted">N'h√©sitez pas √† appeler ou envoyer un SMS</p>
                <div class="d-grid gap-2">
                    <a href="tel:{{ annonce.user.phone }}" class="btn btn-primary">
                        <i class="fas fa-phone"></i> Appeler maintenant
                    </a>
                    <a href="sms:{{ annonce.user.phone }}" class="btn btn-outline-primary">
                        <i class="fas fa-sms"></i> Envoyer un SMS
                    </a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% if app.user == annonce.user %}
<!-- Modal de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Supprimer l'annonce</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>√ätes-vous s√ªr de vouloir supprimer cette annonce ?</p>
                <p class="text-muted small">Cette action est irr√©versible.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('app_annonce_delete', {id: annonce.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annonce.id) }}">
                    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}